---
const proyects = [
    {
        slide: 1, 
        carousel: 0,
        target: "scriptforze",
        img: {
            img1: "/ScriptForze/YonkersGarage.png",
            img2: "/ScriptForze/YonkersGarage.png",
            img3: "/ScriptForze/YonkersGarage.png",
            img4: "/ScriptForze/YonkersGarage.png",
            img5: "/ScriptForze/YonkersGarage.png",
            img6: "/ScriptForze/YonkersGarage.png",
            img7: "/ScriptForze/YonkersGarage.png",
            img8: "/ScriptForze/YonkersGarage.png",
        },
        msg: {
            msg1: "This is a Landing page",
            msg2: "of a company called",
            msg3: "YonkersGarage.",
            msg4: "YonkersGarage.",
            msg5: "ScriptForze",
            msg6: " An E-commerce with",
            msg7: "its own backoffice.",
            msg8: "This project was made",
            msg9: "with Next.Js and NestJs.",

        },
        title: "Frontend",
        sortDescription: "E-commerce company and Backoffice",
    },
    {
        slide: 2, 
        carousel: 1,
        target: "colegium",
        img: {
            img1: "/Colegium/colegium1.png",
            img2: "/Colegium/colegium2.png",
            img3: "/Colegium/colegium3.png",
            img4: "/Colegium/colegium4.png",
            img5: "/Colegium/colegium5.png",
            img6: "/Colegium/colegium6.png",
            img7: "/Colegium/colegium7.png",
            img8: "/Colegium/colegium8.png",
        },
        msg: {
            msg1: "Statistical flow",
            msg2: "management and",
            msg3: "intranet setup and",
            msg4: "maintenance.",
            msg5: "Colegium",
            msg6: "Made with Node,",
            msg7: "Node,",
            msg8: "Postgresql",
            msg9: " and NodeJs.",
        },
    },
]
interface Props {
	targets: string;
}
---

<!-- Main modal -->
{proyects.map(({ slide, carousel, target, title, sortDescription }) => (
    targets === target ? 
        <div id={`${target}-modal`} class="relative p-4 w-full max-w-md max-h-full">
            <!-- Modal content -->
            <div class="relative bg-white rounded-lg shadow dark:bg-primary">
                <!-- Modal header -->
                <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                        {target}
                    </h3>
                    <button 
                        type="button" 
                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm h-8 w-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" 
                        data-modal-toggle={`${target}-modal`}
                    >
                        <svg 
                            class="w-3 h-3" 
                            aria-hidden="true" 
                            xmlns="http://www.w3.org/2000/svg" 
                            fill="none" 
                            viewBox="0 0 14 14"
                        >
                            <path 
                                stroke="currentColor" 
                                stroke-linecap="round" 
                                stroke-linejoin="round" 
                                stroke-width="2" 
                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                            />
                        </svg>
                        <span class="sr-only">Close modal</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div class="p-4 md:p-5">
                    <ul class="mb-4">
                        <li>
                            <div class="relative w-[320px] my-0 mx-[auto] [perspective:1000px]">
                                <div class="absolute w-[70%] h-full [transform-style:preserve-3d] animate-[rotate360_10s_infinite_forwards_linear]">
                                    {proyects.map((project, index) => (
                                        <Fragment key={`project-${index}`}>
                                            {Object.values(project.msg).map((msgContent) => (
                                                <div class="carousel__face">
                                                    <span class="m-auto text-[0.5rem]">{msgContent}</span>
                                                </div>
                                            ))}
                                        </Fragment>
                                    ))}     
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    : null
))}

<style> 
    .carousel__face { 
        position: absolute;
        width: 300px;
        height: 187px;
        top: 20px;
        left: 10px;
        right: 10px;
        background-size: cover;
        box-shadow:inset 0 0 0 2000px rgba(0,0,0,0.5);
        display: flex;
    }
    {proyects.map((project, index) => (
        {Object.values(project.msg).map((msgContent) => (
            <div class="carousel__face">
                <span class="m-auto text-[1rem]">{msgContent}</span>
            </div>
        ))}
    ))}
    .carousel__face:nth-child(1) {
        background-image: url("https://images.pexels.com/photos/1141853/pexels-photo-1141853.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
        transform: rotateY(  0deg) translateZ(230px);
        width: 200px;
        height: 200px;
    }
    @keyframes rotate360 {
        from {
            transform: rotateY(0deg);
        }
        to {
            transform: rotateY(-360deg);
        }
    }
</style>

