---
import Mail from './icons/Mail.astro';
import Location from './icons/Location.astro';
import Cv from './icons/Cv.astro';
import Line from './Line.astro';
import Card from './Card.astro';

const iconsItem = {
    firstCard: [
        {
            alt: "Mail icon",
            src: "mailto:jhonnyrra@gmail.com",
            title: "jhonnyrra@gmail.com",
            Component: Mail,
        },
        {
            alt: "Download my CV",
            src: "../../public/Curriculum_Jhonny_uruena.pdf",
            title: "Curriculum vitae",
            Component: Cv,
        },
    ],
    secondCard: [
        {
            alt: "Location icon",
            src: "https://www.google.com/maps/d/viewer?mid=1L6NVUlIyX1845tahyTZglDryNaU&hl=en_US&ll=3.428699075622406%2C-76.51304184073248&z=13",
            title: "Cali, Colombia",
            Component: Location,
        },
    ],
}
---
<section id="contact">
    <article class="bg-primary w-full mx-auto lg:max-w-screen-xl lg:pt-9">
        <div class="flex flex-row gap-4 justify-center pt-32 relative bottom-16 lg:pt-24">
            <Line class="bg-skin absolute left-0 w-1/5 mt-3.5 sm:w-1/4 lg:w-2/6" />
            <h1 class="text-white relative bottom-1.5 text-center font-sans font-semibold text-3xl sm:bottom-3.5 sm:text-5xl lg:text-6xl lg:bottom-5" >Contact Me</h1>
            <Line class="bg-skin absolute right-0 w-1/5 mt-3.5 sm:w-1/4 lg:w-2/6" />
        </div>
        <ul class="flex flex-col w-4/5 m-auto gap-y-3 relative bottom-12 md:grid sm:grid-cols-2 md:justify-items-cente md:justify-items-stretch md:gap-3">
            {
                iconsItem.firstCard.map(({alt, src, title, Component}) =>(
                    <li>
                        <a 
                            href={src}
                            role="link"
                            target="_blank" 
                            title={title} 
                            rel="noopener noreferrer"
                        >
                            <Card
                                title={title} 
                                href=""
                                classContainer="group bg-secondary h-16 w-full flex flex-row-reverse gap-x-3 justify-center p-5 rounded-xl"
                                classImg=""
                                classTitle="text-lg text-skin font-sans font-semibold"
                            >
                                <Component
                                    alt= {alt}
                                    class="fill-current relative bottom-1 w-9 h-9"
                                />
                                <div class="absolute top-0 -inset-full h-16 w-1/2 z-5 block transform -skew-x-12 bg-gradient-to-r from-transparent to-primary opacity-40 group-hover:animate-shine" />
                            </Card>
                        </a>
                    </li>
                ))
            }
        </ul>
        <ul class="w-4/5 pb-10 gap-y-3 relative m-auto bottom-7 md:gap-3 md:w-1/3 ">
            {
                iconsItem.secondCard.map(({alt, src, title, Component}) =>(
                    <li>
                        <a 
                            href={src}
                            role="link"
                            target="_blank" 
                            title={title} 
                            rel="noopener noreferrer"
                        >
                            <Card
                                title={title} 
                                href=""
                                classContainer="group bg-secondary h-16 w-full flex flex-row-reverse gap-x-3 justify-center p-5 rounded-xl"
                                classImg=""
                                classTitle="text-lg text-skin font-sans font-semibold"
                            >
                                <Component
                                    alt= {alt}
                                    class="fill-current relative bottom-1 w-9 h-9"
                                />
                                <div class="absolute top-0 -inset-full h-16 w-1/2 z-5 block transform -skew-x-12 bg-gradient-to-r from-transparent to-primary opacity-40 group-hover:animate-shine" />
                            </Card>
                        </a>
                    </li>
                ))
            }
        </ul>
    </article>
</section>
